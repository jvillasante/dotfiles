        check $?

        echo ">>> Copying CMakeLists.txt to $PROJECT_PATH..."
        cp "$DOTFILES_DIR/Misc/CMakeLists.g++.txt" "$PROJECT_PATH/CMakeLists.txt"
        check $?

        if [ -f /etc/fedora-release ]; then
            echo ">>> Copying compile_flags.txt (fedora) to $PROJECT_PATH..."
            cp "$DOTFILES_DIR/Misc/compile_flags.g++.fedora.txt" "$PROJECT_PATH/compile_flags.txt"
            check $?
        elif [ ! -f /etc/debian_version ]; then
            echo ">>> Copying compile_flags.txt (debian) to $PROJECT_PATH..."
            cp "$DOTFILES_DIR/Misc/compile_flags.g++.debian.txt" "$PROJECT_PATH/compile_flags.txt"
            check $?
        else
            echo ">>> Unknown OS (only fedora and debian are supported)..."
