        echo ">>> Copying .clang-tidy to $PROJECT_PATH..."
        cp "$DOTFILES_DIR/Misc/.clang-tidy" "$PROJECT_PATH/"
        check $?

        echo ">>> Initializing 'git' in $PROJECT_PATH..."
