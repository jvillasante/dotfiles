#
# Set default values for all the accounts.
#
defaults
logfile ~/.maildir/msmtp.log
tls_trust_file ~/.maildir/certificates/Certificates.pem

#
# Google Gmail
#
account gmail
auth on
host smtp.gmail.com
port 465
protocol smtp
from jvillasantegomez@gmail.com
user jvillasantegomez@gmail.com
passwordeval security find-generic-password -a Offlineimap -s jvillasantegomez@gmail.com -w
tls on
tls_starttls off

#
# Apple iCloud
#
account icloud
auth on
host smtp.mail.me.com
port 465
protocol smtp
from julio.villasante@icloud.com
user julio.villasante@icloud.com
passwordeval security find-generic-password -a Offlineimap -s julio.villasante@icloud.com -w
tls on
tls_starttls off

#
# Default account
#
account default : gmail
